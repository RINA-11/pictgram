<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">コメント</h1>
        <%=form_for @comment,method: :post do |f|%>
          <div class="form-group">
            <%=f.label:content%>
            <%=f.text_area:content,class:"form-control"%>
            <%= f.hidden_field :topic_id, :value => params[:topic_id] %>
          </div>
          <%if logged_in? %>
            <%=f.submit "コメントする",class:"btn btn-black btn-block"%>
          <%end%>
        <%end%>
      </div>
    </div>
  </div>
</div>